<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.a2a2lab.module.codeGroup.CodeGroupDao">

	<resultMap id="resultMapObj"
		type="com.a2a2lab.module.codeGroup.CodeGroupDto"></resultMap>

	<sql id="selectCommon">
		FROM codegroup a
		WHERE 1=1
			AND codeGroupDelNy = 0
			
		<!-- <if test="shUseNy != null and !shUseNy.equals('')">AND a.ifcgUseNy = #{shUseNy}</if> -->
		<!-- <if test="shDelNy != null and !shDelNy.equals('')">AND a.ifcgDelNy = #{shDelNy}</if> -->
		
		<!-- <choose>
			<when test="shOptionDate == 1">AND a.regDateTime BETWEEN #{shDateStart} AND #{shDateEnd}</when>
			<when test="shOptionDate == 2">AND a.modDateTime BETWEEN #{shDateStart} AND #{shDateEnd}</when>
		</choose> -->
		
		<!-- <choose>
			<when test="shOption == 1">AND a.ifcgSeq = #{shValue}</when>
			<when test="shOption == 2">AND a.ifcgName LIKE CONCAT('%',#{shValue},'%')</when>
			<when test="shOption == 3">AND a.ifcgNameEng LIKE CONCAT('%',#{shValue},'%')</when>
		</choose> -->
			
	</sql>

	<select id="selectOneCount" resultType="Integer">
		SELECT COUNT(*)
		<include refid="selectCommon"></include>
	</select>

	<select id="selectList" resultMap="resultMapObj">
		SELECT aa.* FROM (
			SELECT
				a.seq,
				a.codeGroupUse,
				a.codeGroupCd,
				a.codeGroupNm,
				(SELECT COUNT(*)
                FROM code b
                WHERE
					a.seq = b.codeGroup_seq
				) AS codeCnt
			FROM
				codegroup a
			WHERE
				codeGroupDelNy = 0
			ORDER BY
				seq DESC
			) aa
		LIMIT #{rowNumToShow} OFFSET #{startRnumForMysql}
	</select>

	<insert id="insert">
		INSERT INTO codegroup(
			codeGroupUse,
			codeGroupCd,
			codeGroupNm,
			codeGroupDelNy
		) VALUES(
			#{codeGroupUse},
			NULLIF(#{codeGroupCd},''),
			#{codeGroupNm},
			0
		)
		<selectKey resultType="String" keyProperty="seq"
			order="AFTER">
			SELECT last_insert_id()
		</selectKey>
	</insert>
	
	<delete id="delete">
		DELETE
		FROM
			codegroup
		WHERE
			seq = #{seq}
	</delete>
	
	<update id="uelete">
		UPDATE codegroup SET
			codeGroupDelNy = 1
		WHERE
			seq = #{seq}
	</update>
	
	
</mapper>