		ORDER BY
			product_id DESC
		LIMIT #{pageVo.rowNumToShow} OFFSET #{pageVo.startRnumForMysql}
	</select>

	<select id="findProductById" resultMap="resultMapObj">
		SELECT
			product_id AS productId
			,name
			,is_used AS isUsed
		FROM 
			product
		WHERE
			1=1
			AND product_id = #{productId}
	</select>

	<insert id="createProduct">
		INSERT INTO product(
			name
			,created_at
			,is_used
			,is_deleted
		) VALUES(
			#{name},
			now(),
			#{isUsed},
			0
		)
	</insert>
	
	<update id="updateProduct">
		UPDATE product SET
			name = #{name}
			,is_used = #{isUsed}
			,updated_at = now()
		WHERE
			1=1
			AND product_id = #{productId}
	</update>
	
	<update id="softDeleteProduct">
		UPDATE product SET
			is_deleted = 1
			,updated_at = now()
		WHERE
			1=1
			AND product_id = #{productId}
	</update>
	
	<delete id="hardDeleteProduct">
		DELETE
		FROM
			product
		WHERE
			product_id = #{productId}
	</delete>





