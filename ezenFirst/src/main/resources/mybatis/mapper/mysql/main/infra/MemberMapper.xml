<mapper namespace="com.a2a2lab.module.member.MemberDao">

	<resultMap id="resultMapObj" type="com.a2a2lab.module.member.MemberDto"></resultMap>
		
	<select id="countMembersByVo" resultType="Integer">
		SELECT 
			COUNT(*)
		FROM
			member
		WHERE
			1=1
			<if test="searchVo.shIsUse != null and !searchVo.shIsUse.equals('')">AND is_used = #{searchVo.shIsUse}</if>
			<if test="searchVo.shIsDel != null and !searchVo.shIsDel.equals('')">AND is_deleted = #{searchVo.shIsDel}</if>
			
			<choose>
				<when test="searchVo.shOptionDate == 1">AND created_at BETWEEN CONCAT(#{searchVo.shDateStart}, 'T00:00:00') AND CONCAT(#{searchVo.shDateEnd}, 'T23:59:59')</when>
				<when test="searchVo.shOptionDate == 2">AND updated_at BETWEEN CONCAT(#{searchVo.shDateStart}, 'T00:00:00') AND CONCAT(#{searchVo.shDateEnd}, 'T23:59:59')</when>
			</choose>
			
			<choose>
				<when test="searchVo.shOption == 1">AND member_id = #{searchVo.shValue}</when>
				<when test="searchVo.shOption == 2">AND name LIKE CONCAT('%',#{searchVo.shValue},'%')</when>
			</choose>
	</select>

	<select id="findMembersByVo" resultMap="resultMapObj">
		SELECT 
			member_id AS memberId
			,email
			,name
			,gender
			,birthday
			,mobile_carrier AS mobileCarrier
			,phone
			,created_at AS createdAt
			,updated_at AS updatedAt
			,is_admin AS isAdmin
		FROM
			member
		WHERE
			1=1
			<if test="searchVo.shIsUse != null and !searchVo.shIsUse.equals('')">AND is_used = #{searchVo.shIsUse}</if>
			<if test="searchVo.shIsDel != null and !searchVo.shIsDel.equals('')">AND is_deleted = #{searchVo.shIsDel}</if>
			
			<choose>
				<when test="searchVo.shOptionDate == 1">AND created_at BETWEEN CONCAT(#{searchVo.shDateStart}, 'T00:00:00') AND CONCAT(#{searchVo.shDateEnd}, 'T23:59:59')</when>
				<when test="searchVo.shOptionDate == 2">AND updated_at BETWEEN CONCAT(#{searchVo.shDateStart}, 'T00:00:00') AND CONCAT(#{searchVo.shDateEnd}, 'T23:59:59')</when>
			</choose>
			
			<choose>
				<when test="searchVo.shOption == 1">AND member_id = #{searchVo.shValue}</when>
				<when test="searchVo.shOption == 2">AND name LIKE CONCAT('%',#{searchVo.shValue},'%')</when>
			</choose>
		ORDER BY
			member_id DESC
		LIMIT #{pageVo.rowNumToShow} OFFSET #{pageVo.startRnumForMysql}
	</select>
	
	<select id="findMemberById" resultMap="resultMapObj">
		SELECT
			member_id AS memberId
			,email
			,name
			,gender
			,birthday
			,mobile_carrier AS mobileCarrier
			,phone
			,is_admin AS isAdmin
		FROM 
			member
		WHERE
			1=1
			AND member_id = #{memberId}
	</select>
		
	<insert id="createMember">
		INSERT INTO member(
			email
			,password
			,name
			,gender
			,birthday
			,mobile_carrier
			,phone
			,created_at
			,is_admin
			,is_deleted
		) VALUES(
			#{email}
			,#{password}
			,#{name}
			,#{gender}
			,#{birthday}
			,#{mobileCarrier}
			,#{phone}
			,now()
			,#{isAdmin}
			,0
		)
	</insert>
		
		
		
		
