		FROM
			orders
		WHERE
			ordersStatus != 3
		    AND ordersDelNy = 0
	</select>
	
	<select id="ordersSum" resultType="Integer">
		SELECT 
			SUM(m.menuPrice) AS odTotalPrice
		FROM
			orders od
			JOIN orderMenu om ON om.orders_seq = od.seq
			JOIN menu m ON m.seq = om.menu_seq
		WHERE
			ordersStatus != 3
		    AND ordersDelNy = 0
	</select>
	

